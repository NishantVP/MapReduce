<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.v1_0.coen317dc.sneha.nishant.www.mapreduce.TestingActivity"
    tools:showIn="@layout/activity_testing"
    android:id="@+id/ServerIP">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Connection"
        android:id="@+id/firstConnectionButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="142dp"
        android:onClick="clickedFirstConnection"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Map Service"
        android:id="@+id/mapServiceButton"
        android:layout_below="@+id/firstConnectionButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickedMapService"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reduce Service"
        android:id="@+id/reduceServiceButton"
        android:layout_below="@+id/mapServiceButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickedReduceService"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server IP"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Default Port"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S2C Port"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status Updates"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/firstConnectionButton"
        android:layout_toEndOf="@+id/firstConnectionButton" />

</RelativeLayout>
